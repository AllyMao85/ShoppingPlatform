<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h1>Sell Product</h1>
            <form action="/sell" method="post" enctype="multipart/form-data">
                <div class="col-md-12 form-group">
                    <label for="title">Product Name</label>
                    <input type="text" id="title" name="title" class="form-control" required>
                </div>
                <div class="col-md-6 form-group">
                    <label for="price">Category</label>
                    <select id="category" name="category" class="form-control">
                        {{# each categories}}
                            <option value="{{this._id}}">{{this.categoryName}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="col-md-12 form-group">
                    <label for="imagePath">Photos (max 5)</label>
                    <div class="input-group">
                        <input type="file" id="imageUpload" name="imageUpload" class="inputFile" accept="image/png, image/jpeg, image/gif, image/jpg" multiple required>
                        <label class="btn btn-primary" for="imageUpload"><span class="fa fa-upload"></span> Upload</label>
                    </div>
                    <input type="hidden" id="thumbnailIndex" name="thumbnailIndex" value="0">
                    <div id="list"></div>
                </div>
                <div class="col-md-12 form-group">
                    <label for="description">Description</label>
                    <textarea id="description" name="description" class="form-control"></textarea>
                </div>
                <div class="col-md-6 form-group">
                    <label for="price">Price ($)</label>
                    <input type="number" id="price" name="price" class="form-control" min='0' required>
                </div>
                <div class="col-md-6 form-group">
                    <label for="stock">Stock</label>
                    <input type="number" id="stock" name="stock" class="form-control" min='1' required>
                </div>

