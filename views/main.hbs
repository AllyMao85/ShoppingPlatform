<div class="container" style="margin-top:40px;">
    <div class="row">
        <div class="col-md-12">
            <div class="text-center">
                <h1 style="font-weight: 400; font-size: 60px;">Featured products</h1>
                <label style="font-weight: 400;">Browse through our popular products</label>
                <br><br>
            </div>
            <div class="row">
                {{# each products }}
                <div class="col-sm-6 col-md-4">
                    <div class="thumbnail">
                        <a href="/product/{{this._id}}" style="text-decoration: none;">
                            <img src="{{ this.imagePath }}" class="img-responsive"></a>
                        <div class="caption">
                            <div class="heading">
                                <a href="/product/{{this._id}}" style="text-decoration: none;"><h4 class="name">{{ this.title }}</h4></a>
                                <p class="seller">Sold by {{ this.seller.fullName }}</p>
                                <div class="rating-stars">{{this.averageRating}}</div>
                                <p class="price">${{ this.price }}</p>
                            </div>
                            <div class="text-center">
                                <a href="/addToCart/{{this._id}}" class="btn btn-success" role="button"><i class="fa fa-shopping-cart" aria-hidden="true"></i> Add to Cart</a>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>

<script src="slider-pro/js/jquery.sliderPro.min.js"></script>

<script type="text/javascript">
    $(document).ready(function() {
        $('#my-slider').sliderPro({
            forceSize: 'fullWindow',
            arrows: true,
            touchSwipe: false,
            centerImage: false,
            buttons: false,
            fade: true
        });

        $(".rating-stars").each(function(i, div) {
            var rating = parseFloat($(this).text());
            var readOnly = $(this).rateYo({
                rating: rating,
                starWidth: "15px",
                readOnly: true
            });
        });
    });
</script>
